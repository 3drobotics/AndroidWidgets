<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Styles from the 3DR Android UI style guide -->
    <style name="O3dr" />

    <style name="O3dr.Text" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="O3dr.Text.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="O3dr.Text.Title">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
    </style>

    <style name="O3dr.Text.SubHeader">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="O3dr.Text.Caption">
        <item name="android:textSize">14sp</item>
    </style>

</resources>